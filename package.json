{
  "name": "hfc-sample-node",
  "version": "1.0.0",
  "description": "Hyperledger Fabric Client sample for node.js providing swagger REST APIs",
  "main": "dist/main.js",
  "scripts": {
    "start": "yarn run build && node dist/main.js",
    "build": "webpack --mode development",
    "dev": "nodemon ./src/main.js --exec babel-node --config .nodemonrc.json | pino-pretty",
    "dev:debug": "nodemon ./src/server --exec babel-node --config .nodemonrc.json --inspect | pino-pretty",
    "test": "mocha --compilers js:@babel/register --exit",
    "test:debug": "mocha --compilers js:@babel/register --inspect-brk --exit",
    "lint": "eslint -c .eslintrc.json {src/server,test}/**",
    "lint:fix": "eslint --fix -c .eslintrc.json {src/server, test}/**"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.4",
    "fabric-ca-client": "1.4.1",
    "fabric-client": "1.4.1",
    "fabric-network": "1.4.1",
    "js-yaml": "^3.12.0",
    "pino": "^5.10.8",
    "swagger-express-middleware": "^2.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.0.5",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-jsx": "^6.0.2",
    "eslint-plugin-babel": "^5.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "json-loader": "^0.5.4",
    "mocha": "^5.0.5",
    "nodemon": "^1.18.4",
    "pino-pretty": "^2.2.2",
    "prettier": "^1.16.0",
    "supertest": "^3.4.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-node-externals": "^1.7.2"
  },
  "author": "Seongkyu Cho",
  "license": "apache-2.0"
}
